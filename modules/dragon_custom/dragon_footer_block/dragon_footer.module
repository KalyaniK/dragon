/**
 * Implements _qad_footer_block_add_icon($image_path, $link_path, $tag_a_attr = NULL, $tag_img_attr = NULL)
 * Wrap html with icon and link in Drupal way, not hard code
 *
 * Input $image_path : the icon link, use pictures on the Internet
 *       $link_path  : the link of the button when clicked,
 *       $tag_a_attr = NULL : attributes for tag <a>, default value is NULL
 *       $tag_img_attr = NULL : attributes for tag <img>, default value is NULL
 * Return wrapped html
 */

function _qad_footer_block_add_icon($image_path, $link_path, $tag_a_attr = NULL, $tag_img_attr = NULL) {
  //Build the icon
  $icon = array(
    'path' => $image_path,
    'attributes' => $tag_img_attr,
  );

  //Wrapped with the image theme
  $wrapped_icon = theme('image', $icon);

  // Tell Drupal that the text is html
  $options['html'] = TRUE;
  $options['attributes'] = $tag_a_attr;

  return l($wrapped_icon, $link_path, $options);
}
