/**
 * Implements hook_block_info().
 */
function dragon_footer_block_info() {
  $blocks = array();

  $blocks['dragon_footer'] = array(
    'info' => t('Dragon Footer'),
    'status' => TRUE,
    'region' => 'footer',
    'cache' => DRUPAL_CACHE_PER_ROLE,
    'visibility' => BLOCK_VISIBILITY_NOTLISTED,
  );

  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function dragon_footer_block_view($delta = '') {
  $block = array();
  switch ($delta) {
    case 'dragon_footer':
      $block['subject'] = t('');
      $block['content'] = _dragon_footer_html();
      break;
  }

  return $block;
}

